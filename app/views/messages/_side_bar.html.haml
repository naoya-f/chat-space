.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog')
        
  .side-bar__group-list
    - current_user.groups.each do |group|
      = link_to '#', class: "group" do
        .group__name
          = group.name
        .group__latest-message
